<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

    <ImageView
        android:id="@+id/listingImageId"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/listingTitleTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/listingImageId"
        android:layout_toRightOf="@id/listingImageId"
        android:text="Test receipt title" />

    <TextView
        android:id="@+id/listingShortDescriptionTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listingTitleTextId"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/listingImageId"
        android:layout_toRightOf="@id/listingImageId"
        android:text="Test receipt short description" />
    </RelativeLayout>
</RelativeLayout>